//Chasm Shotgun PBR Firstperson (specular workflow)
material texture "models/weapons/FlakgunView-Green.png" {
    normal "materials/weapons/FlakgunView-Green_normal.png" 
    specular "materials/weapons/FlakgunView-Green_specular.png"
    glossiness 10
	specularlevel 5
	disablefullbright
}


