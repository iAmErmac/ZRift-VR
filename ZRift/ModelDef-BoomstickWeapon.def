Model ChasmBoomstick
{
   Path "models/weapons/boomstick"   	
   Model 0 "Boomstick.md3"   
   SurfaceSkin 0 0 "Quakeshotgun.png"  
   SurfaceSkin 0 1 "Hands.png"  //hands
   OFFSET 5 -15 -10	         //X-Left/Right Y-Depth Z-Up/Down
   AngleOffset 0              //angle  
   PitchOffset 0		     //pitch Left Right
   RollOffset 90             //roll Up-Down  
   Scale -0.08 0.06 0.08   //Scale (negative value is to mirror left right)

//Idle
  
   FrameIndex RIFB Z 0 0
   
}

