		GOR0 A 0 A_FaceTarget
		GOR0 B 1 A_Explode (4,12, XF_EXPLICITDAMAGETYPE, XF_NOTMISSILE)
		GOR0 C 2 A_CustomBulletAttack(1, 1, 1, 12, "YakMeleePuff", 50, CBAF_AIMFACING)
		GOR0 A 0 A_SetPainThreshold (50)
		Goto See
	Missile3: //HOWL EXPLOSION
		HOW0 A 2 A_Playsound ("Yakman/Roar")
		HOW0  ABCDEFGHI  2 A_FaceTarget
		HOW0  JJ 2 Bright A_FaceTarget
		HOW0 A 0 A_Quake(4,12,0,400)
		HOW0  J 0 A_CustomMissile("Yakball",48,0,15,0)
		HOW0  J 0 A_CustomMissile("Yakball",48,0,30,0)
		HOW0  J 0 A_CustomMissile("Yakball",48,0,45,0)
		HOW0  J 0 A_CustomMissile("Yakball",48,0,60,0)
		HOW0  J 0 A_CustomMissile("Yakball",48,0,75,0)
