		HOW0  J 0 A_CustomMissile("Yakball",48,0,255,0)
		HOW0  J 0 A_CustomMissile("Yakball",48,0,270,0)
		HOW0  J 0 A_CustomMissile("Yakball",48,0,285,0)
		HOW0  J 0 A_CustomMissile("Yakball",48,0,300,0)
		HOW0  J 0 A_CustomMissile("Yakball",48,0,315,0)
		HOW0  J 0 A_CustomMissile("Yakball",48,0,330,0)
		HOW0  J 0 A_CustomMissile("Yakball",48,0,345,0)
		HOW0  J 0 A_CustomMissile("Yakball",48,0,0,0)
		HOW0 KLMNOPQRSTUVWXYZ 2
		HOW1  ABCDEFGHIJ 2
