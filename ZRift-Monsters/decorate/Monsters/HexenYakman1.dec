	PainSound "Yakman/pain"
	DeathSound "Yakman/Die"
	ActiveSound "Yakman/Hoof"
	SeeSound "Yakman/Snort1"
	Species "Yaktribe"
	Obituary "%o was killed by a Yakman."
  
	States
	{
	Spawn:
		WAI0 A 0 NoDelay
		WAI0 A 0  A_Jump (256, "Idle")
