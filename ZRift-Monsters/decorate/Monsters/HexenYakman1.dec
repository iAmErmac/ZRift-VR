	Melee:
		GOR0 AB 2 A_FaceTarget 
		GOR0 C 2 A_CustomBulletAttack(1, 1, 1, 12, "YakMeleePuff", 50, CBAF_AIMFACING)
		Goto See
	Pain:
		PAI0 ABCD 1 
		PAI0 E 1 A_Pain
		PAI0 FGH 1
		Goto See
	Death:
		DEA0 A 2 
		DEA0 B 2  A_Scream
		DEA0 C 2 
		DEA0 D 2 A_NoBlocking
		DEA0 EFGHIJKLMOPQRSTUVWX 2
		DEA0 Y -1
		Stop
	}
}

