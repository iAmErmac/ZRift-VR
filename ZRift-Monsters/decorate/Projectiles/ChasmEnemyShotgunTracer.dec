actor EnemyBulletSmoke
{ 
    Radius 0
    Height 0 
    Speed 1
	Mass 1
	+FLOAT
	+NOGRAVITY
	+DONTSPLASH
	+NOTELEPORT
	+NOBLOCKMAP
	+NODAMAGETHRUST
	+CANNOTPUSH
    PROJECTILE 
	RenderStyle Translucent
	Alpha 0.67
	Scale 0.30
    States 
    { 
    Spawn: 
        SMO1 AABBCCDD 1
        Goto Death 
    Death: 
        SMO1 EEEEE 1 A_Fadeout(0.1) 
        Stop 
    } 
}

