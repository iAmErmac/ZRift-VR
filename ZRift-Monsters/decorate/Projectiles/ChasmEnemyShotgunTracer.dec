//Enemy Tracers

ACTOR ChasmEnemyShotgunTracer : FastProjectile
{
	Radius 2
	Height 2
	PROJECTILE
	MissileType "TracerTrail"
	MissileHeight 8
	RenderStyle Add
	Speed 100
	Alpha 0.95
    +FORCEXYBILLBOARD
	+BRIGHT
    Damage(random(4,6))
	SeeSound "Bullet/Wiz"
	States
	{
	Spawn:
	    TNT1 A 0 NoDelay
		CRS1 Y 1 BRIGHT
		Loop
  Death:
    TNT1 A 0
	TNT1 A 0 A_PlaySound("Bullet/Ric", 1, 0.50)
  	TNT1 A 0 A_CustomMissile("EnemyBulletRic", 4, 0, random (0, 360), 2, random (0, 160))
	TNT1 A 0 A_CustomMissile("EnemyBulletSmoke", 4, 0, random (0, 360), 2, random (0, 160))
    TNT1 A 0 BRIGHT A_SpawnDebris("EnemyBulletSparks")
	PING ABCDDD 1 BRIGHT A_FadeOut
	Stop
 Crash:
    TNT1 A 0
	TNT1 A 0 A_PlaySound("Bullet/Flesh", 1)
    PING D 1 BRIGHT A_FadeOut
    stop
  XDeath:
    TNT1 A 0
	TNT1 A 0 A_PlaySound("Bullet/Flesh", 1)
    PING D 1 BRIGHT A_FadeOut
    stop
	}
}


